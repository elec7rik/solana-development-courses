{
    "compilerOptions": {
      "target": "es2022",
      "module": "es2022",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "outDir": "./dist",
      "baseUrl": ".", // Ensures node_modules is properly resolved
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": ["src"]
  }
  